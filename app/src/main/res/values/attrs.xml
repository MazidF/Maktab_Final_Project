<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="horizontal_product_container">
        <attr name="title" format="string" />
        <attr name="hideMoreBtn" format="boolean" />
    </declare-styleable>


    <declare-styleable name="paging_view">
        <attr name="spanCount" />
        <attr name="layoutManager" />
    </declare-styleable>

    <declare-styleable name="custom_text_input_layout">
        <attr name="hasPassword" format="boolean" />
        <attr name="layout_hint" format="string" />
    </declare-styleable>

    <declare-styleable name="ProductCounter">
        <attr name="withLoading" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CustomLottie">
        <attr name="lottie_rawRes" format="reference" />
    </declare-styleable>

    <declare-styleable name="CheckableItemView">
        <attr name="itemText" format="string"/>
    </declare-styleable>

    <declare-styleable name="SettingItemView">
        <attr name="iconSrc" format="reference"/>
        <attr name="hasSwitch" format="boolean"/>
        <attr name="hide" format="boolean"/>
        <attr name="text" format="string"/>
        <attr name="tint" format="color"/>
    </declare-styleable>

    <declare-styleable name="ImageViewWithCounter">
        <attr name="counterMargin" format="dimension" />
        <attr name="counterSize" format="dimension" />
        <attr name="count" format="integer" />
        <attr name="src" format="reference"/>
    </declare-styleable>

</resources>