<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/fragment_profile_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:singleLine="true"
            android:text="محمد مهدی مزیدآبادی"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/fragment_profile_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:singleLine="true"
            android:text="09056165782"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.7dp"
            android:layout_margin="10dp"
            android:background="@color/light_gray" />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="سفارش های من"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <com.example.onlineshop.widgit.ImageViewWithCounter
                android:id="@+id/fragment_profile_refunded"
                android:layout_width="70dp"
                android:layout_height="80dp"
                app:counterSize="30dp"
                app:src="@drawable/ic_order_refunded" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@color/light_gray" />

            <com.example.onlineshop.widgit.ImageViewWithCounter
                android:id="@+id/fragment_profile_completed"
                android:layout_width="70dp"
                android:layout_height="80dp"
                app:counterSize="30dp"
                app:src="@drawable/ic_order_completed" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@color/light_gray" />

            <com.example.onlineshop.widgit.ImageViewWithCounter
                android:id="@+id/fragment_profile_current"
                android:layout_width="70dp"
                android:layout_height="80dp"
                app:counterSize="30dp"
                app:src="@drawable/ic_current_order" />

        </LinearLayout>

        <com.example.onlineshop.widgit.SettingItemView
            android:id="@+id/fragment_profile_reviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:iconSrc="@drawable/ic_message_empty"
            app:text="نقد و نظرات" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="50dp"
            android:background="@color/light_gray" />

        <com.example.onlineshop.widgit.SettingItemView
            android:id="@+id/fragment_profile_locations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:iconSrc="@drawable/ic_location_empty"
            app:text="آدرس ها" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="50dp"
            android:background="@color/light_gray" />

        <com.example.onlineshop.widgit.SettingItemView
            android:id="@+id/fragment_profile_discounts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:iconSrc="@drawable/ic_card_empty"
            app:text="کارت های هدیه" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="50dp"
            android:background="@color/light_gray" />

        <com.example.onlineshop.widgit.SettingItemView
            android:id="@+id/fragment_profile_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:iconSrc="@drawable/ic_profile_empty"
            app:text="اطلاعات حساب کاربری" />

    </LinearLayout>

</ScrollView>